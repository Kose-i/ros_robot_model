<launch>
  <!--Load TortoiseBot URDF-->
  <param name="robot_description" textfile="$(find ros_robot_model)/urdf/robot_model.urdf"/>

  <!--Open empty world-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

  <!--catch parameterServer after TortoiseBot born-->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model tortoisebot"/>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ros_robot_model)/rviz/urdf_tutorial.rviz" required="true"/>

</launch>
