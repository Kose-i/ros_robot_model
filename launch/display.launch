<launch>

  <arg name="model" default="$(find ros_robot_model)/urdf/robot_model.urdf"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>


  <param name="use_gui" value="$(arg gui)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="$(arg debug)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <param name="robot_description" textfile="$(arg model)" />

  <node pkg="gazebo_ros" type="spawn_model" name="urdf_spawner" args="-z 1.0 -unpause -urdf -model robot -param robot_description" respawn="false" output="screen"/>

  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher"/>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ros_robot_model)/rviz/urdf_tutorial.rviz" required="true"/>

</launch>
